#----------import OS for filesystem traversal and access functions
import os

#----------working path for directory access
path = 'C:\\Users\\Fortis\\Desktop\\Today\'s Scans'
print('Frontier Dental Laboratory scanner automation schema -- Zachary Drummond (zdrummon@gmail.com)\n')
print('deleting all medit files within ' + path + '\\\n')
print('here is the total list of folders:')
#----------deletes all medit folders within direct subfolders of the directory in path
def meditDeleter():
    #---------- further commentary needed, will add later
    directory_list = [f for f in os.listdir(path)]
    for i in directory_list:
        print(i)

    print('\nattempting to delete all medit files from each folder:')
    for i in directory_list:
        find_medit = [f for f in os.listdir(path + '\\' + i) if f.endswith('.medit')]

        if not find_medit:
            print('The medit file for (' + i + ') does not exist')
        else:
            medit_path = path + '\\' + i + '\\' + find_medit[0]
            print('deleting (' + i + '\\' + find_medit[0] + ')' )

            if os.path.exists(medit_path):
                os.remove(medit_path)
            else:
                print('The medit file within ' + path + '\\' + i + ' does not exist')

meditDeleter()